<center><h3>Register a New User<h3><br>

<div id="register-form">
<%= form_with url: users_path, method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br><br>

  <%= f.submit "Create New User" %>
<% end %>
</div></center>